<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.marcioabrantes.applicationsearch.MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="383dp"
            android:layout_height="498dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="4dp">

        <EditText
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                tools:layout_editor_absoluteY="16dp"
                android:id="@+id/txtSearch" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Search"
                android:layout_width="368dp"
                android:layout_height="94dp" tools:layout_editor_absoluteY="70dp"
                android:id="@+id/btnSearch" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <ListView
                android:id="@+id/lstItens"
                android:layout_width="368dp"
                android:layout_height="167dp"
                tools:layout_editor_absoluteY="172dp"
                tools:layout_editor_absoluteX="8dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
